<section id="word_selection">
    <%= form_tag '/phibase' do %>
		<%= text_area_tag 'wordstring' %>
		<br>
		<fieldset id="word_properties">
		<% Word.word_properties.each do |attribute| %>
			<%= check_box_tag attribute %>
			<label for=<%=attribute%> title="<%=attribute.humanize%>"><%= attribute %></label>
		<% end %>
		</fieldset>
		<section id="including_homophones_boxes">
			<h1>Including Homophones</h1>
			<fieldset>
				<h2>
					<input type="checkbox" class="checkall">
					Audio-only Categorical
				</h2>
				<ul>
				<% Word.a_only_categorical_including_homophones.each do |attribute| %>
					<li>
						<%= check_box_tag attribute %>
						<label for=<%=attribute%> title="<%=attribute.humanize%>"><%= attribute %></label><br>
					</li>
				<% end %>
				</ul>
			</fieldset>
			<fieldset>
				<h2>
					<input type="checkbox" class="checkall">
					Audio-only Continuous
				</h2>
				<ul>
				<% Word.a_only_continuous_including_homophones.each do |attribute| %>
