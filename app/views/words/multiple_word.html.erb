						<%= check_box_tag attribute %>
						<label for=<%=attribute%> title="<%=attribute.humanize%>"><%= attribute %></label><br>
					</li>
				<% end %>
				</ul>
			</fieldset>
			<fieldset>
				<h2>
					<input type="checkbox" class="checkall">
					Visual-only Categorical
				</h2>
				<ul>
				<% Word.v_only_categorical_including_homophones.each do |attribute| %>
					<li>
						<%= check_box_tag attribute %>
						<label for=<%=attribute%> title="<%=attribute.humanize%>"><%= attribute %></label><br>
					</li>
				<% end %>
				</ul>
			</fieldset>

			<fieldset>
				<h2>
					<input type="checkbox" class="checkall">
					Visual-only Continuous
				</h2>
				<ul>
				<% Word.v_only_continuous_including_homophones.each do |attribute| %>
					<li>
						<%= check_box_tag attribute %>
						<label for=<%=attribute%> title="<%=attribute.humanize%>"><%= attribute %></label><br>
					</li>
				<% end %>
				</ul>
			</fieldset>
		</section>
		<section id="excluding_homophones_boxes">
			<h1>Exluding Homophones</h1>
			<fieldset>
				<h2>
					<input type="checkbox" class="checkall">
					Audio-only Categorical
				</h2>
