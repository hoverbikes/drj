						<%= check_box_tag attribute %>
						<label for=<%=attribute%> title="<%=attribute.humanize%>"><%= attribute %></label><br>
					</li>
				<% end %>
				</ul>
			</fieldset>
			<fieldset>
				<h2>
					<input type="checkbox" class="checkall">
					Audio-only Continuous
				</h2>
				<ul>
				<% Word.a_only_continuous_excluding_homophones.each do |attribute| %>
					<li>
						<%= check_box_tag attribute %>
						<label for=<%=attribute%> title="<%=attribute.humanize%>"><%= attribute %></label><br>
					</li>
				<% end %>
				</ul>
			</fieldset>
			<fieldset>
				<h2>
					<input type="checkbox" class="checkall">
					Visual-only Categorical
				</h2>
				<ul>
				<% Word.v_only_categorical_excluding_homophones.each do |attribute| %>
