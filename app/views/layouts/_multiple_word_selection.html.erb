				<ul>
				<% Word.v_only_continuous_excluding_homophones.each do |attribute| %>
					<li>
						<%= check_box_tag attribute %>
						<label for=<%=attribute%> title="<%=attribute.humanize%>"><%= attribute %></label><br>
					</li>
				<% end %>
				</ul>
			</fieldset>
		</section>
		<br>
		<%= submit_tag 'submit words', id: 'word_up' %>
	<% end %>